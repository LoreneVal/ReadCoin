<h1>Add a new Book</h1>
<%= simple_form_for (@book), url: admin_books_path do |f| %>
  <%= f.input :title %>
  <%= f.input :author %>
  <%= f.input :summary %>
  <%= f.input :url %>
  <%= f.input :quiz %>
  <%= f.input :reward %>
  <%= select_tag "book[genre][]", options_from_collection_for_select(
        @categories,
        :to_s, :to_s),
        class: 'select2', multiple: 'multiple' %>
  <%= f.input :min_age %>
  <%= f.input :max_age %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit %>
<% end %>
