<h1>Add a new Book</h1>
<%= simple_form_for (@book), url: admin_books_path do |f| %>
  <%= f.input :title %>
  <%= f.input :author %>
  <%= f.input :summary %>
  <%= f.input :url %>
  <%= f.input :quiz %>
  <%= f.input :reward %>
  <%= f.input :genre %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit %>
<% end %>
