<div class="kid-dashboard-wrapper">
  <div class="kid-dashboard-container">
    <div class="score-result">
      <% if @score == "100"%>
        <h2>Congratulations!</h2>
        <h3>All the answer are corrects, you just won:</h3>
        <h1><%= image_tag 'coins.png', width: 50, height: 50 %> <%= @book.reward %> RDC</h1>
        <div class="quiz-links">
          <%= link_to "Back to books", kid_dashboard_path(@kid), class: "kid-button" %>
          <%= link_to "E-shop", kid_prizes_path, class: "kid-focus-button" %>
        </div>
      <% else %>
        <h2>Try Again!</h2>
        <h3> You have <%= @score %>% of correct answers</h3>
        <%= link_to "Back to book", kid_book_path(@kid, @book), class: "kid-button" %>
        <%= link_to "Back to quiz", kid_book_quiz_path(@kid, @book), class: "kid-button" %>
      <% end %>
    </div>
  </div>
</div>
